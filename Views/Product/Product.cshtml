@model IEnumerable<VendorConnect.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - VendorConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">

    <style>
        /* Custom styling for the product page */
        .container {
            margin-top: 30px;
        }

        .category-nav {
            margin-bottom: 30px;
        }

        .product-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .product-card:hover {
            transform: scale(1.05);
        }

        .product-card img {
            border-radius: 15px 15px 0 0;
        }

        .product-title {
            font-size: 1.2em;
            font-weight: bold;
            color: #333;
        }

        .product-price {
            font-size: 1.1em;
            color: #d9534f;
            font-weight: bold;
        }

        .btn-custom {
            background-color: #22177A;
            color: white;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-custom:hover {
            background-color: #f1c40f;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Category Navigation -->
        <ul class="nav nav-tabs category-nav">
            <li class="nav-item">
                <a class="nav-link active" href="#all" data-toggle="tab">All</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#mobile" data-toggle="tab">Mobile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#laptop" data-toggle="tab">Laptop</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#electronics" data-toggle="tab">Electronics</a>
            </li>
        </ul>

        <!-- Tab Content for Each Category -->
        <div class="tab-content">
            <!-- All Products -->
            <div class="tab-pane fade show active" id="all">
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card product-card">
                                <img src="~/@product.Image" class="card-img-top" alt="@product.Name">
                                <div class="card-body">
                                    <h5 class="product-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p class="product-price">$@product.Price</p>
                                    <a href="#" class="btn btn-custom">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Mobile Products -->
            <div class="tab-pane fade" id="mobile">
                <div class="row">
                    @foreach (var product in Model.Where(p => p.Category == "Mobile"))
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card product-card">
                                <img src="~/@product.Image" class="card-img-top" alt="@product.Name">
                                <div class="card-body">
                                    <h5 class="product-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p class="product-price">$@product.Price</p>
                                    <a href="#" class="btn btn-custom">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Laptop Products -->
            <div class="tab-pane fade" id="laptop">
                <div class="row">
                    @foreach (var product in Model.Where(p => p.Category == "Laptop"))
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card product-card">
                                <img src="~/@product.Image" class="card-img-top" alt="@product.Name">
                                <div class="card-body">
                                    <h5 class="product-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p class="product-price">$@product.Price</p>
                                    <a href="#" class="btn btn-custom">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Electronics Products -->
            <div class="tab-pane fade" id="electronics">
                <div class="row">
                    @foreach (var product in Model.Where(p => p.Category == "Electronics"))
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card product-card">
                                <img src="~/@product.Image" class="card-img-top" alt="@product.Name">
                                <div class="card-body">
                                    <h5 class="product-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p class="product-price">$@product.Price</p>
                                    <a href="#" class="btn btn-custom">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
