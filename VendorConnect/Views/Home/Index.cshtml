@model IEnumerable<VendorConnect.Models.Product>

@{
    Layout = "_Layout";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to VendorConnect</h1>
    <p class="lead">Your one-stop solution for managing vendor products and comparing prices</p>
    <hr class="my-4">
    <p>Sign up or log in to start managing your account</p>
    <a class="btn btn-primary btn-lg" href="/Account/Create" role="button">Create Account</a>
    <a class="btn btn-secondary btn-lg" href="/Account/Login" role="button">Login</a>
</div>

<!-- Displaying Product List -->
<h2>Featured Products</h2>

@if (Model != null && Model.Any())
{
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card product-card">
                        <!-- Display product image (you can replace this with actual image URL if available) -->
                        <img src="@Url.Content($"~/images/{product.ProductBrand}.jpg")" class="card-img-top" alt="@product.ProductName">
                        <div class="card-body">
                            <h5 class="product-title">@product.ProductName</h5>
                            <p class="card-text">@product.ProductDescription</p>
                            <p class="product-price">$@product.ProductPrice</p>
                            <p class="product-rating">
                                <strong>Rating:</strong> @product.ProductRating / 5
                            </p>
                            <p class="product-bought">
                                <strong>Bought By:</strong> @product.ProductBoughtByPeople
                            </p>
                            <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="btn btn-info">View Details</a>
                            <a href="@Url.Action("AddToCart", "Product", new { id = product.ProductId })" class="btn btn-success">Add to Cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>No products available.</p>
}
