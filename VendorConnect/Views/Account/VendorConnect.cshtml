@{
    ViewData["Title"] = "VendorConnect";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>VendorConnect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Ensure the body and html cover the full page */
        html, body {
            height: 100%; /* Full height */
            width: 100%;
            margin: 0;
            padding: 0;
            background-color: #2a3d66; /* Dark blue background */
            font-family: 'Arial', sans-serif;
            overflow: hidden; /* Prevent scrolling */
        }

        .hero-section {
            background: linear-gradient(135deg, #D8C0FF, #B078D9); /* Gradient background */
            color: #2a3d66; /* Dark text color for contrast */
            height: 100vh; /* Full viewport height */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
            position: relative;
            transition: background 0.5s ease-in-out; /* Smooth background transition */
        }

        /* Add smooth scaling and opacity transition to the text */
        .hero-section h1 {
            font-size: 4rem; /* Huge font size */
            font-weight: bold;
            margin: 20px 0;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
            letter-spacing: 2px; /* Add letter spacing */
            opacity: 0; /* Initially hidden */
            transform: scale(0.8); /* Initial scale */
            animation: fadeInUp 1s ease-out forwards, scaleUp 0.5s ease-out 1s forwards; /* Animation to fade in and scale up */
        }

        .hero-section p {
            font-size: 1.5rem; /* Larger font size for text */
            margin: 20px 0;
            max-width: 700px;
            line-height: 1.5;
            font-weight: lighter;
            opacity: 0; /* Initially hidden */
            transform: translateY(30px); /* Start below */
            animation: fadeInUp 1s ease-out 0.5s forwards; /* Animation to fade in and slide up */
        }

        .hero-section .cta-button {
            font-size: 1.5rem;
            padding: 15px 30px;
            background-color: #8330C2; /* Purple button */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.3s ease-out, box-shadow 0.3s ease-out;
        }

        .hero-section .cta-button:hover {
            background-color: #6a1e9e; /* Darker purple on hover */
            transform: scale(1.1); /* Slight scaling effect */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); /* Add shadow on hover */
        }

        /* Animation for fading in and sliding up */
        @@keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(30px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Animation for scaling up the text */
        @@keyframes scaleUp {
            0% {
                opacity: 0;
                transform: scale(0.8);
            }
            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Custom Mouse Effect Circle */
        .mouse-circle {
            position: absolute;
            width: 20px;
            height: 20px;
            background-color: #8330C2; /* Color for the circle */
            border-radius: 50%;
            pointer-events: none; /* Prevent it from interfering with clicks */
            transform: translate(-50%, -50%); /* Center the circle on the mouse */
            opacity: 0.7;
            transition: all 0.2s ease; /* Smooth transition */
        }

    </style>
</head>
<body>

    <div class="hero-section">
        <h1>Connect with Us, Build More Trust, and Close More Sales</h1>
        <p>Join VendorConnect today and grow your business with powerful tools designed for success. Let’s take your business to the next level.</p>
        <a href="/Account/Login" class="cta-button">Register as Vendor</a>
    </div>

    <!-- Mouse Circle Effect -->
    <div class="mouse-circle" id="mouse-circle"></div>

    <script>
        const mouseCircle = document.getElementById('mouse-circle');

        // Follow the mouse movement
        document.addEventListener('mousemove', (event) => {
            const mouseX = event.clientX;
            const mouseY = event.clientY;

            // Update position of the circle to follow the mouse with smooth transition
            mouseCircle.style.left = `${mouseX}px`;
            mouseCircle.style.top = `${mouseY}px`;

            // Smooth transition effect when the mouse moves
            mouseCircle.style.transition = 'left 0.1s, top 0.1s'; 
        });

        // Ensure smooth transition for the text and button
        document.addEventListener('DOMContentLoaded', () => {
            const heroSection = document.querySelector('.hero-section');
            heroSection.style.transition = 'background 0.5s ease-in-out'; /* Smooth transition */
        });
    </script>

</body>
</html>
