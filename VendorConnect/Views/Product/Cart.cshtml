@model List<VendorConnect.Models.CartItem>

<h2>Your Cart</h2>

@if (Model == null || !Model.Any())
{
    <p>Your cart is empty!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Image</th> <!-- New column for the product image -->
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.ProductName" style="width:100px;height:auto;" /> <!-- Displaying product image -->
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductPrice.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.ProductPrice * item.Quantity).ToString("C")</td>
                    <td>
                        <a href="@Url.Action("RemoveFromCart", "Product", new { id = item.ProductId })" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.Sum(item => item.ProductPrice * item.Quantity).ToString("C")</h3>

    <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary">Proceed to Checkout</a>
}
